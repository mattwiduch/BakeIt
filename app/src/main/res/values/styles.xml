<resources>
  <!-- Base application theme. -->
  <style name="BaseTheme" parent="Theme.AppCompat.Light">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:colorBackground">@color/colorBackground</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="AppTheme" parent="BaseTheme" />

  <!-- Ingredients Widget Config theme -->
  <style name="AppTheme.Widget.Config" parent="AppTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowBackground">@color/colorBackground</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" >
    <item name="android:background">@drawable/toolbar_gradient</item>
  </style>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <!-- Text Styles -->
  <style name="AppText.RecipeListItem.Name" parent="TextAppearance.AppCompat.Title">
    <item name="android:fontFamily">@font/poppins_medium</item>
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="AppText.RecipeListItem.Servings" parent="TextAppearance.AppCompat.Title">
    <item name="android:fontFamily">@font/poppins_regular</item>
    <item name="android:textColor">@color/colorTextSecondary</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="AppText.RecipeDetails.Label" parent="TextAppearance.AppCompat.Title">
    <item name="android:fontFamily">@font/poppins_semibold</item>
    <item name="android:textColor">@color/colorText</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="AppText.RecipeDetails.Servings" parent="AppText.RecipeListItem.Name">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="AppText.Body" parent="TextAppearance.AppCompat.Title">
    <item name="android:fontFamily">@font/poppins_light</item>
    <item name="android:textColor">@color/colorText</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="AppText.RecipeDetails.StepNumber" parent="TextAppearance.AppCompat.Caption">
    <item name="android:fontFamily">monospace</item>
    <item name="android:textColor">@color/colorAccent</item>
  </style>

</resources>
